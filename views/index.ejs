<% include header %>
<div class="pure-g">
  <div class="pure-u-1 section-intro">
    <h2>The latest news</h2>
    <div class="category-view">
      <% for (var i = 0; i < categorieen.length; i++) { %>
        <a href="/categorieen/<%- i %>" class="category"><%- categorieen[i] %></a>
      <% } %>
    </div>
  </div>

  <div class="pure-u-5-8 articles">
              <% var teller = 1; %>
              <% nieuws.forEach(function(item){ %>
              <section>
                <div class="pure-u-1 pure-u-sm-1-4 article-image">
                  <img src="/img/<%- item.thumbnail %>" alt="<%- item.title %>0">
                </div>
                <div class="pure-u-1 pure-u-sm-7-12">
                  <h2>
                    <a class="article-link" href=/items/<%- item.id %>><%- item.title %></a>
                  </h2>
                  <p class="article-date"><%- item.date %></p>
                  <p class="article-body">
                    <%- item.summary %>
                  </p>
                  <a class="read-more" href=/items/<%- item.id %>>read more</a>
                </div>
              </section>
              <% teller++;}); %>
  </div>
</div>
<% include footer %>
